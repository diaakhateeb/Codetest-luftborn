{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs\\codetest.log",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Destructure": [
      {
        "Name": "With",
        "Args": {
          "policy": "Sample.CustomPolicy, Sample"
        }
      },
      {
        "Name": "ToMaximumDepth",
        "Args": {
          "maximumDestructuringDepth": 4
        }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": {
          "maximumStringLength": 100
        }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": {
          "maximumCollectionCount": 10
        }
      }
    ]
  },
  "ConnectionStrings": {
    "ConnectionString": "mongodb+srv://bongo:qwerty123@bon-do-c1gyl.mongodb.net/test?retryWrites=true&w=majority",
    "DatabaseName": "codetest"
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "JwtSecretKey": "541ADE2-DDR-5421A-CVF55-0598OPO99"
  }
}
